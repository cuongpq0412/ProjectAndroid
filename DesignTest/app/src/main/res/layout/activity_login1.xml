<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#3F51B5"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="42dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/diamon"
            android:id="@+id/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO HERE"
            android:textColor="#Fff"
            android:layout_gravity="center_horizontal"
            android:textSize="28sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="42dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:paddingRight="8dp"
                    android:layout_weight="1"
                    android:text="connect to facebook"
                    android:background="#2d7fbb"
                    android:textColor="#fff"
                    android:drawableLeft="@drawable/iconf"
                    android:textSize="8sp"
                    android:layout_marginRight="6dp"
                    android:gravity="right|center_vertical"
                    android:layout_height="28dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#3797db"
                    android:drawableLeft="@drawable/download"
                    android:paddingRight="8dp"
                    android:textSize="8sp"
                    android:layout_marginLeft="6dp"
                    android:text="login width twiter"
                    android:textColor="#fff"
                    android:gravity="right|center_vertical"
                    android:layout_height="28dp"/>

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Username"
                android:id="@+id/et_username"
                android:textColor="#fff"
                android:background="#880054a5"
                android:textColorHint="#76ffffff"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:drawableRight="@drawable/ic_account_circle_black_24dp"
                android:paddingRight="22dp"
                android:drawableTint="#87ffffff"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Password"
                android:id="@+id/et_password"
                android:textColor="#fff"
                android:background="#880054a5"
                android:textColorHint="#76ffffff"
                android:paddingLeft="16dp"
                android:layout_marginTop="22dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:paddingRight="22dp"
                android:drawableTint="#87ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fogot_pass"
                android:layout_marginTop="22dp"
                android:textColor="#fff"
                android:layout_gravity="right"/>
            <Button
                android:layout_width="128dp"
                android:text="LOGIN"
                android:id="@+id/btn_submit"
                android:textColor="#fff"
                android:layout_marginTop="22dp"
                android:background="#0d63ec"
                android:layout_gravity="center_horizontal"
                android:layout_height="48dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="SIGN IN"
            android:background="#03b0f8"
            android:textSize="18sp"
            android:textColor="#fff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="SIGN UP"
            android:background="#285bae"
            android:textSize="18sp"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>