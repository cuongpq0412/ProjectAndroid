<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:background="#4CAF50"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="56dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="56dp"
            android:backgroundTint="#fff" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="#87ffffff"
            android:text="PASSWORD"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:background="#56000000"
            android:text="SIGN IN"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/create_acount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:text="@string/create_acount"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:text="--------------------- or -------------------------"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_connectfb"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="16dp"
            android:background="#56000000"
            android:drawableLeft="@drawable/iconf2"
            android:drawableTint="#fff"
            android:gravity="center|center_vertical"
            android:paddingLeft="16dp"
            android:text="SIGN IN WIDTH FACEBOOK"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_connectgg"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="28dp"
            android:background="#56000000"
            android:drawableLeft="@drawable/gg"
            android:drawableTint="#fff"
            android:gravity="center|center_vertical"
            android:paddingLeft="16dp"

            android:text="SIGN IN WIDTH GOOGLE"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>