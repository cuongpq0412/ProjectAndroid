<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:id="@+id/ln_top"
                android:background="#406fd9"
                android:gravity="center"

                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:id="@+id/cv_top"
                    android:elevation="100dp"
                    app:cardCornerRadius="48dp">
                    <ImageView
                        android:id="@+id/iv_home"
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:tint="#3F51B5"
                        android:src="@drawable/ic_home_black_24dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:layout_marginLeft="28dp"
                android:id="@+id/cv_form_login"
                android:layout_marginRight="28dp"
                app:cardCornerRadius="12dp"
                android:layout_below="@+id/ln_top"
                android:layout_marginTop="-28dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:textSize="28dp"
                        android:id="@+id/name_login"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textColor="#406fd9"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMAIL"
                        android:layout_below="@id/name_login"
                        android:textStyle="bold"
                        android:textColor="#3F51B5"
                        android:textSize="12dp"
                        android:id="@+id/tv_email"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_below="@+id/tv_email"
                        android:textColor="#000"
                        android:id="@+id/et_email"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PASSWORD"
                        android:layout_marginTop="16dp"
                        android:layout_below="@id/et_email"
                        android:textColor="#3F51B5"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:id="@+id/tv_pass"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_below="@+id/tv_pass"
                        android:textColor="#000"
                        android:id="@+id/et_password"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="100dp"
                android:layout_marginTop="-34dp"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:background="#2196F3"
                android:id="@+id/cv_btn_submit"
                app:cardCornerRadius="34dp"
                app:cardBackgroundColor="#426bd7"
                android:layout_below="@+id/cv_form_login"
                android:layout_height="68dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="LOGIN"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FORGOT PASSWORD ?"
                android:id="@+id/fogot_pass"
                android:textColor="#406fd9"
                android:layout_below="@+id/cv_btn_submit"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fogot_pass"
                android:text="Create Acount"
                android:id="@+id/go_register"
                android:textColor="#406fd9"
                android:layout_marginTop="22dp"
                android:textSize="22sp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
