<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#673AB7">
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="5"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:layout_height="88dp">
            <ImageView
                android:id="@+id/iv_stop"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/hand"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/iv_percent50"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/percent50"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/iv_restart"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/restart"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/iv_call"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/call"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:src="@drawable/hepl"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="312dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

                android:src="@drawable/atp__bg_circle_anim" />

            <ImageView
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="112dp"
                android:src="@drawable/atp_icon_retry" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_question"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginTop="196dp">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_text_question"
                android:gravity="center"
                android:minHeight="112dp"
                android:padding="16dp"
                android:text="Hello"
                android:textColor="#FFC107"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_title_qestion"
                android:gravity="center"
                android:text="Cau 1"
                android:textColor="#311B92"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/tv_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_question"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_nomal"
            android:text="Nhi"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/tv_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_a"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_nomal"
            android:text="Tam"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/tv_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_b"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_nomal"
            android:text="Tam"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/tv_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_c"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_nomal"
            android:text="Tu"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</layout>